---
import TodoCheckBox from "./TodoCheckBox.astro";

const { todo } = Astro.props;

const {
  id,
  content,
  completed,
  createdAt
} = todo;
---

<div class="flex flex-row items-center justify-between m-2 p-2 space-x-6">
  <div class="flex flex-row items-center justify-start space-x-2">
    <TodoCheckBox
      id={id}
      completed={completed}
    />
    <p class="text-2xl text-black font-bold p-5">{content}</p>
  </div>

  <button
    id={`delete-button-${id}`}
    class="rounded-md p-2 bg-red-700 text-white shadow-md active:scale-95 transition-transform duration-[10ms]"
    hx-delete={`/partials/todos/delete/${id}`}
    hx-trigger="click"
    hx-target="#todo-container"
    hx-swap="innerHTML"
  >
    DELETE
  </button>
</div>